      <b style="color:red;"><%= @athlete.errors[:name] %></b>
    <% end %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
    <% if @athlete.errors.include?(:email) %>
      <b style="color:red;"><%= @athlete.errors[:email] %></b>
    <% end %>
  </p>

  <p>
    <%= form.submit :Save %>
  </p>


<% end %>

