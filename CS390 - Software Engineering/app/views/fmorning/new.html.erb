  <%= form.radio_button :sleepTime, '6.5' %> 6.5 &nbsp &nbsp
  <%= form.radio_button :sleepTime, '7' %> 7 &nbsp &nbsp
  <%= form.radio_button :sleepTime, '7.5' %> 7.5 &nbsp &nbsp<br>
  <%= form.radio_button :sleepTime, '8' %> 8 &nbsp &nbsp
