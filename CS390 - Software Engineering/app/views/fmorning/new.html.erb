<body style="background-color:white;padding-left:5%;padding-right:5%;">
  <font face="Bebas Neue" color="#02243E" size=200%>
    <div>MSOC Morning Questionnaire</div>
  </font>
<font face="avenir">

<%= form_with scope: :form, url: fmorning_index_path, local: true do |form| %>

<% if @fmorning.errors.any? %> 
<div id="error_explanation">
